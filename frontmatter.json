{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "default",
      "pageBundle": false,
      "fields": [
        {
          "title": "Title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "Summary",
          "name": "summary",
          "type": "string"
        },
        {
          "title": "Article preview",
          "name": "thumb",
          "type": "image",
          "isPreviewImage": true
        },
        {
          "title": "Hero Image",
          "name": "hero",
          "type": "image"
        },
        {
          "title": "Is in draft",
          "name": "draft",
          "type": "boolean"
        },
        {
          "title": "Tags",
          "name": "tags",
          "type": "tags"
        },
        {
          "title": "Category",
          "name": "category",
          "type": "string"
        },
        {
          "title": "Links",
          "name": "links",
          "type": "choice",
          "choices": [
            "",
            "website",
            "lil",
            "github"
          ]
        },
        {
          "title": "layout",
          "name": "layout",
          "type": "string"
        },
        {
          "title": "hideDesc",
          "name": "hideDesc",
          "type": "datetime"
        },
        {
          "title": "video",
          "name": "video",
          "type": "string"
        }
      ]
    },
    {
      "name": "post",
      "pageBundle": false,
      "fields": [
        {
          "title": "layout",
          "name": "layout",
          "type": "string"
        },
        {
          "title": "title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "summary",
          "name": "summary",
          "type": "string"
        },
        {
          "title": "hideDesc",
          "name": "hideDesc",
          "type": "datetime"
        },
        {
          "title": "video",
          "name": "video",
          "type": "string"
        },
        {
          "title": "hero",
          "name": "hero",
          "type": "string"
        },
        {
          "title": "thumb",
          "name": "thumb",
          "type": "string"
        },
        {
          "title": "category",
          "name": "category",
          "type": "string"
        },
        {
          "name": "type",
          "type": "string",
          "default": "post",
          "hidden": true
        }
      ]
    }
  ],
  "frontMatter.content.pageFolders": [
    {
      "title": "_site",
      "path": "[[workspace]]/_site"
    }
  ],
  "frontMatter.dashboard.openOnStart": true,
  "frontMatter.content.fmHighlight": true
}